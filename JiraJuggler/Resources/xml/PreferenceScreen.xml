<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:enabled="true"
    android:persistent="true"
    android:title="Settings"
    android:summary="Please ensure all settings have been set before using the app" >

    <EditTextPreference
        android:key="JiraUrl"
        android:dialogTitle="Jira url"
        android:dialogMessage="e.g. https://jira.yoursite.com"
        android:persistent="true"
        android:title="Jira url" />
    
    <EditTextPreference
        android:key="UserName"
        android:dialogTitle="User name"
        android:persistent="true"
        android:title="User name" />

    <EditTextPreference
        android:key="Password"
        android:dialogTitle="Password"
        android:persistent="true"
        android:password="true"
        android:title="Password" />
</PreferenceScreen>
